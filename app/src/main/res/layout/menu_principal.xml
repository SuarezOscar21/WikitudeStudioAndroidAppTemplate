<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="10dp"
    tools:context=".MenuPrincipal">

    <LinearLayout
        android:id="@+id/Conexion"
        android:layout_width="383dp"
        android:layout_height="475dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="VIRTUAL REALITY"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <LinearLayout
            android:id="@+id/linearPruebaConexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/Camara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_baseline_camera_enhance_24"
                android:onClick="inicio"
                android:padding="10dp"
                android:text="CAMARA " />

            <Button
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_baseline_help_24"
                android:onClick="ayuda"
                android:padding="10dp"
                android:text="InformaciÃ³n" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageLoked"
            android:layout_width="300dp"
            android:layout_height="336dp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:src="@drawable/istloja" />


    </LinearLayout>

</RelativeLayout>